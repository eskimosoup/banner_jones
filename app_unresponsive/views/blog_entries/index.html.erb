<h1><%= title @title %></h1>

<% if @blog_entries.length > 0 %>
<br />
  <% for blog_entry in @blog_entries %>
    <%= render "blog_entries/blog_entry", :blog_entry => blog_entry %>
  <% end %>
  
  <%= will_paginate @blog_entries %>
  
<% else %>
 <p>No blog entries to display.</p>
<% end %>

<% content_for :right do  %>
    <%= render :partial => "tags" %>
    <%= render :partial => "dates" %>
<% end %>
