<% form_for [:admin, @office], :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>
  
  <fieldset>
  <legend>Basic Details</legend>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :address %><br />
    <%= f.text_area :address %>
  </p>

  <p>
    <%= f.helpful_label :postcode, "Postcode", "Used to generate link to google maps, should be in format XXX XXX" %><br />
    <%= f.text_field :postcode %>
  </p>

  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  </fieldset>

  <fieldset>
  <legend>Directions</legend>
  <p>
    <%= f.label :directions %><br />
    <%= f.advanced_text_area :directions %>
  </p>
  
  </fieldset>
  
  <p><%= f.submit "Submit" %></p>
  
<% end %>
