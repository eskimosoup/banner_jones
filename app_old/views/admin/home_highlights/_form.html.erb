<% form_for [:admin, @home_highlight], :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :headline %><br />
    <%= f.text_field :headline %>
  </p>

  <p>
    <%= f.label :summary %><br />
    <%= f.text_area :summary %>
  </p>

  <p>
    <%= f.label :link %><br />
    <%= f.select :link, link_options_for_select(f.object.link) %>
  </p>

  <p>
    <%= f.label :color, "Banner Colour" %><br />
    <%= f.select :color, [["Yellow","yellow"],["Red","red"]] %>
  </p>
  
  <%= image_field_tag f, :home_highlight, :image %>

  <p><%= f.submit "Submit" %></p>
<% end %>
