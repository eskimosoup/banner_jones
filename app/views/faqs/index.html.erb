<%= javascript_include_tag :defaults %>

<% if params[:tag] %>
  <h1><%= title "FAQs: #{params[:tag]}" %></h1>
<% else %>
  <h1><%= title "FAQs" %></h1>
<% end %>

<% if @faqs.length > 0 %>

  <% for faq in @faqs %>
    <%= render "faqs/faq", :faq => faq %>
  <% end %>
  
  <%= will_paginate @faqs %>
  
<% else %>
 <p>No FAQs to display.</p>
<% end %>

<% content_for :right do  %>
    <%= render :partial => "tags" %>
<% end %>
