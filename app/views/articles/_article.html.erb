<% if article.image? %>
 <%= link_to image_tag(article.image.url(:index), :class=>"image_left"), {:action => "show",
  :id => article.id,
  :tag => params[:tag],
  :year => params[:year],
  :month => params[:month]} %>
<% end %>

<h2 style="margin: 0px; padding: 0px; font-size: 14px;"><%= link_to h(article.headline), {:action => "show",
  :id => article.id,
  :tag => params[:tag],
  :year => params[:year],
  :month => params[:month]} %></h2>

<span class="date"><%=h simple_date_format article.date %></span>

<%=h article.summary %><br />

<p align="right" class="more"><%= link_to "Read more", {:action => "show",
  :id => article.id,
  :tag => params[:tag],
  :year => params[:year],
  :month => params[:month]}, {:class=>"small"} %></p>

  <hr />
