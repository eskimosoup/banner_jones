<script type="text/javascript">
  function toggleSpecialism(){
    $("specialism-content").toggle();
    var text = $("specialism-toggle").innerHTML;
    if (text == "Read More"){
      $("specialism-toggle").update("Close")
    }
    else{
      $("specialism-toggle").update("Read More")
    }
  }
  function toggleCaseSuccesses(){
    $("case-successes-content").toggle();
    var text = $("case-successes-toggle").innerHTML;
    if (text == "Read More"){
      $("case-successes-toggle").update("Close")
    }
    else{
      $("case-successes-toggle").update("Read More")
    }
  }
  function toggleTestimonials() {
    $("testimonials").toggle();
    var text = $("testimonials-toggle").innerHTML;
    if (text == "Read More"){
      $("testimonials-toggle").update("Close")
    }
    else{
      $("testimonials-toggle").update("Read More")
    }
  }
</script>

<% hide_right %>

<% content_for :left do %>
  <%= render "team_categories/index" %>
<% end %>

<div class="team_show">

  <h1>Meet the Team</h1>

  <h2>Professional Profile</h2>

  <!-- professional -->

  <!-- left -->
  <div class="row">

    <div class="team_show_left eight columns">
      <% if @team_member.image? %>
        <% if @team_member.image_alt.blank? %>
          <%= image_tag @team_member.image.url(:show_page), :width => "130", :height => "195" %>
        <% else %>
          <%= image_tag @team_member.image.url(:show_page), :width => "130", :height => "195", :alt => @team_member.image_alt %>
        <% end %>
      <% end %>
      <h3 class="team_show_name">
        <%= title(@team_member.name) %>
        <span><%= h(@team_member.role) %></span>
      </h3>
      <div class="team_contact_info">
        <% if @team_member.office? %>
          <p>
            <span>OFFICE:</span> <%= h(@team_member.office) %>
          </p>
        <% end %>
        <% if @team_member.telephone? %>
          <p>
            <span>DIRECT DIAL:</span> <strong><%= h(@team_member.telephone) %></strong>
          </p>
        <% end %>
        <% if @team_member.email? %>
          <p>
            <span>EMAIL:</span> <%= auto_link @team_member.email %>
          </p>
        <% end %>
      </div>
    </div>


  <!-- /left -->

  <!-- right -->
    <% if @team_member.q1? || @team_member.q2? %>
      <div class="team_show_right four columns">
        <% if @team_member.q1? %>
          <h3 style="margin-top: 0px; padding-top: 0px;">Where did you study?</h3>
          <p><%= @team_member.q1 %></p>
        <% end %>
        <% if @team_member.q2? %>
          <h3>When did you Qualify?</h3>
          <p><%= @team_member.q2 %></p>
        <% end %>
      </div>
    <% end %>
  <!-- /right -->



  <!-- beneath -->
    <div class="personal_profile twelve columns">

      <% if @testimonial %>
        <hr />
        <div class="testimonial">
          <span>"<%= @testimonial.quote %>"</span>
          <strong><%= @testimonial.author %></strong>
        </div>
        <% if @testimonials %>
          <div id="testimonials" style="display: none;">
            <% @testimonials.each do |testimonial| %>
              <div class="testimonial spaced">
                <span>"<%= testimonial.quote %>"</span>
                <strong><%= testimonial.author %></strong>
              </div>
            <% end %>
          </div>
          <p><%= link_to_function "Read More", "toggleTestimonials()", :id => "testimonials-toggle" %></p>
        <% end %>
      <% end %>
    </div>
  <!-- /beneath -->

  <!-- personal -->
    <% if @team_member.q3? || @team_member.q4? || @team_member.q5? || @team_member.accred_1_image? || @team_member.accred_2_image? || @team_member.accred_3_image? %>
      <div class="personal_profile twelve columns">
        <div>
          <% if @team_member.q3? %>
            <% if @team_member.specialism_content? %>
              <hr />
              <h3>What do you specialise in?</h3>
              <p><%= @team_member.q3 %></p>
              <%= link_to_function "Read More", "toggleSpecialism()", :id => "specialism-toggle" %>
              <div id="specialism-content" style="display: none">
                <br />
                <%= @team_member.specialism_content %>
              </div>
            <% else %>
              <hr />
              <h3>What do you specialise in?</h3>
              <p><%= @team_member.q3 %></p>
            <% end %>
          <% end %>
          <% if @team_member.q4? %>
            <% if @team_member.case_successes_content? %>
              <hr />
              <h3>Recent case successes</h3>
              <p><%= @team_member.q4 %></p>
              <%= link_to_function "Read More", "toggleCaseSuccesses()", :id => "case-successes-toggle" %>
              <div id="case-successes-content" style="display: none">
                <br />
                <%= @team_member.case_successes_content %>
              </div>
            <% else %>
              <h3>Recent case successes</h3>
              <p><%= @team_member.q4 %></p>
            <% end %>
          <% end %>
          <% if @team_member.q5? || @team_member.accred_1_image? || @team_member.accred_2_image? || @team_member.accred_3_image? %>
            <h3>Accreditations &amp; memberships</h3>
            <% if @team_member.q5? %>
              <p><%= @team_member.q5 %></p>
            <% end %>
            <% if @team_member.accred_1_image? || @team_member.accred_2_image? || @team_member.accred_3_image? %>
              <div class="team_member_logos">
                <% if @team_member.accred_1_image? %>
                  <% if !@team_member.accred_1_link.blank? %>
                    <%= link_to(image_tag(@team_member.accred_1_image(:show_page), :alt => @team_member.accred_1_image_alt), @team_member.accred_1_link, {:popup => true}) %>
                  <% else %>
                    <%= image_tag(@team_member.accred_1_image(:show_page), :alt => @team_member.accred_1_image_alt) %>
                  <% end %>
                <% end %>
                <% if @team_member.accred_2_image? %>
                  <% if !@team_member.accred_2_link.blank? %>
                    <%= link_to(image_tag(@team_member.accred_2_image(:show_page), :alt => @team_member.accred_2_image_alt), @team_member.accred_2_link, {:popup => true}) %>
                  <% else %>
                    <%= image_tag(@team_member.accred_2_image(:show_page), :alt => @team_member.accred_2_image_alt) %>
                  <% end %>
                <% end %>
                <% if @team_member.accred_3_image? %>
                  <% if !@team_member.accred_3_link.blank? %>
                    <%= link_to(image_tag(@team_member.accred_3_image(:show_page), :alt => @team_member.accred_3_image_alt), @team_member.accred_3_link, {:popup => true}) %>
                  <% else %>
                    <%= image_tag(@team_member.accred_3_image(:show_page), :alt => @team_member.accred_3_image_alt) %>
                  <% end %>
                <% end %>
                <div class="clear"></div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
    <% if @team_member.q6? || @team_member.q7? || @team_member.q8? || @team_member.q9? || @team_member.q10? %>
      <div class="personal_profile twelve columns">
        <hr />
        <h2>Personal Profile</h2>
        <% if @team_member.casual_image? %>
          <%= image_tag @team_member.casual_image.url(:show_page), :class => "profile_pic" %>
        <% end %>
        <div style="width: 300px;">
          <% if @team_member.q6? %>
            <h3>What was your first job?</h3>
            <p><%= @team_member.q6 %></p>
          <% end %>
          <% if @team_member.q7? %>
            <h3>What are your hobbies?</h3>
            <p><%= @team_member.q7 %></p>
          <% end %>
          <% if @team_member.q8? %>
            <h3>What's your favourite drink?</h3>
            <p><%= @team_member.q8 %></p>
          <% end %>
          <% if @team_member.q9? %>
            <h3>What would your ideal holiday be?</h3>
            <p><%= @team_member.q9 %></p>
          <% end %>
          <% if @team_member.q10? %>
            <h3>What has been your greatest achievement this year?</h3>
            <p><%= @team_member.q10 %></p>
          <% end %>
        </div>
        <div class="clear"></div>
      </div>
    <% end %>
  <!-- /personal -->

  </div>

  <!-- related -->
    <% if !@related_team_members.empty? %>
      <hr />
      <h2 style="margin-top: 8px; padding-top: 8px;">Also in this department</h2>
    <% end %>
    <p class="more hide-for-small" align="right">
      <%= link_to "View all team members", team_members_path, :class => "large" %>
    </p>
    <% if !@related_team_members.empty? %>
      <div class="team_list clear">
        <% for team_member in @related_team_members %>
          <%= render "team_member", :team_member => team_member %>
        <% end %>
      </div>
      <hr />
    <% end %>
  <!-- /related -->

</div>
