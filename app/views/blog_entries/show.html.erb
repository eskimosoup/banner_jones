<% title "Blog Entries" %>

  <h1><%=h @blog_entry.headline %></h1>

  <span class="date"><%=h simple_date_format @blog_entry.date %></span>


<% if @blog_entry.image? %>
    <%= image_tag @blog_entry.image.url(:show), :class=>"image_left" %>
<% end %>

<%= @blog_entry.main_content %>
  
<p class="tags">
  <%= @blog_entry.tag_list.collect{|x| link_to(x.to_s, blog_entries_path(:tag => x.to_s)) }.join(' | ') %>
</p>
<hr />
<p align="right" class="more">
  <%= link_to "View all blogs", blog_entries_path, {:class=>"medium"} %>
</p>

<% content_for :right do  %>
  <%= render :partial => "tags" %>
  <%= render :partial => "dates" %>
<% end %>
